<%- include("../../partials/header"); %>

<div class="root">
    <div class="header">
        <h1>All Users Of Meezan Bank</h1>
        <% if (data.delete === true) { %>
            <h3>Data Deleted Successfully</h3>
        <% } %>
    </div>
    <div class="table">
        <table>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Amount</th>
                <th>Image Name</th>
                <th>Action</th>
            </tr>
            <% for(let i = 0 ; i < users.length ; i++) { %>
                <tr>
                    <td> <%= users[i].first_name %> </td>
                    <td> <%= users[i].last_name %> </td>
                    <td> <%= users[i].email %> </td>
                    <td> <%= users[i].password %> </td>
                    <td> <%= users[i].amount %> </td>
                    <td> <%= users[i].image %> </td>
                    <td> <a href="/delete/ <%= i %>">Delete</a> </td>
                </tr>
            <% } %>
        </table>
    </div>
</div>

<%- include("../../partials/footer"); %>