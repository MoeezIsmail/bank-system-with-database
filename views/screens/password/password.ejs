<%- include("../../partials/header"); %>

<div class="root">
    <div class="header">
        <h1>Confirm Trasaction</h1>
        <h3>You are sending <%= amount %> to <%= first_name %></h3>
    </div>
    <div class="form">
        <form action="/transfer" method="POST">
            <input type="hidden" class="email" name="email" value="<%= email %>">
            <input type="hidden" class="amount" name="amount" value="<%= amount %>">
            <input type="password" class="password" placeholder="Enter your password to continue" name="password" value="A12345678@@">
            <input type="hidden" class="bank" name="bank" value="<%= bank %>">
            <input type="submit" class="btn">
        </form>
        <div class="btn">
            <a href="/cancel"><button>Cancel</button></a>
        </div>
    </div>
</div>

<%- include("../../partials/footer"); %>